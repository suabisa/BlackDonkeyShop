/* pages/collect/index.wxss */
.collect_main .collect_title {
  padding: 20rpx 0;
}
.collect_main .collect_title .collect_tips {
  padding: 15rpx;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
}
.collect_main .collect_content .goods_item {
  display: flex;
  border-bottom: 1rpx solid rgba(100, 100, 100, 0.4);
}
.collect_main .collect_content .goods_item .goods_img {
  flex: 3;
  padding: 10rpx 0;
  text-align: center;
}
.collect_main .collect_content .goods_item .goods_img image {
  width: 70%;
}
.collect_main .collect_content .goods_item .goods_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content .goods_item .goods_info .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.collect_main .collect_content .goods_item .goods_info .good_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
