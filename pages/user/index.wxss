page {
  background-color: #eaf1e9;
}
.user_info_wrap {
  height: 35vh;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50rpx;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 155rpx;
  height: 155rpx;
  border-radius: 30rpx;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_info_wrap .user_login {
  position: relative;
}
.user_info_wrap .user_login .user_login_btn {
  margin: 0;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 245rpx;
  width: 160rpx;
  background-color: #333;
  color: #ffffff;
  font-size: 35rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-weight: 400;
  text-align: center;
}
.user_info_wrap .user_login .user_unlogin {
  width: 155rpx;
  height: 155rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50rpx;
  text-align: center;
  border-radius: 30rpx;
}
.use_content {
  position: relative;
  top: -60rpx;
}
.use_content .use_main {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 24%;
}
.use_content .use_main .history_wrap {
  width: 98vw;
  background-color: #fff;
  display: flex;
  border-radius: 10rpx;
}
.use_content .use_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.use_content .use_main .history_wrap navigator .history_num {
  color: var(--themeColor);
  font-size: 30rpx;
}
.use_content .use_main .order {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.use_content .use_main .order .order_top {
  padding: 20rpx 20rpx 12rpx 6rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.use_content .use_main .order .order_top::before {
  content: "  ";
  display: inline-block;
  width: 10rpx;
  height: 30rpx;
  background-color: var(--themeColor);
  position: relative;
  top: 2rpx;
}
.use_content .use_main .order .order_content {
  display: flex;
  text-align: center;
}
.use_content .use_main .order .order_content .content_item {
  flex: 1;
  padding: 10rpx 20rpx;
}
.use_content .use_main .order .order_content .content_item .order_icon {
  color: var(--themeColor);
  font-size: 50rpx;
}
.use_content .use_main .order .order_content .content_item .all_order {
  margin-top: 6rpx;
}
.use_content .use_main .other {
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.use_content .use_main .other .other_item {
  display: flex;
  padding: 20rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
  font-size: 32rpx;
}
.use_content .use_main .other .other_item .icon_title {
  display: flex;
}
.use_content .use_main .other .other_item .icon_title .info {
  flex: 1;
  color: #333333;
  margin-left: 10rpx;
  font-size: 30rpx;
  padding: 0;
  font-weight: 400;
  width: auto;
  background-color: #fff;
}
.use_content .use_main .other .other_item:nth-last-child(1) {
  border: none;
}
